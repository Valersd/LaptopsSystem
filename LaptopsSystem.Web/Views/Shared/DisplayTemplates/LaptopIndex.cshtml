@model LaptopIndex

<p>
    <span class="h3">@Html.DisplayFor(m => m.Manufacturer) </span> <span class="h4">@Html.DisplayFor(m => m.Model)</span>
</p>
<img src="@Model.ImageUrl" alt="@String.Format("{0} {1}",Model.Manufacturer, Model.Model)" width="261" height="161"/>
<br />
<p style="padding-top:5px">
    <span class="text-info">Price:   </span><strong class="h3 text-success">@Html.DisplayFor(m => m.Price)</strong>
    <br />
    @Html.ActionLink("View more...", "Details", new { id = Model.Id })
</p>
